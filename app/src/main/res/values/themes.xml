<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DrawingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Default background for all screens -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Splash screen customization for API 31+ -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/black</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/white</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">1000</item> <!-- 1 second -->
    </style>

    <style name="Theme.DrawingApp" parent="Base.Theme.DrawingApp" />
</resources>