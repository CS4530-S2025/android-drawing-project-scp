<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DrawingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Default background for all screens -->
        <item name="android:windowBackground">@color/black</item>

        <!-- Splash screen customization for API 31+ -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/white</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/black</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="31">1000</item> <!-- 1 second -->
    </style>

    <!-- for welcome screen -->
    <style name="Theme.DrawingApp.FullScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>

</resources>